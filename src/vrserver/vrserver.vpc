$Macro OUTBINDIR	"$BINPUBLIC"
$Macro GENERATED_PROTO_DIR	"$SRCDIR\vrserver\generated_proto"

$Macro OUTBINNAME		"vrserver" [$WINDOWS]
$Macro OUTBINNAME       "vrserver_osx"   [$OSXALL]
